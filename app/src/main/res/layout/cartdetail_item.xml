<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_posttion"
                style="@style/TextViewDetail"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_combo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="4">
                <ImageView
                    android:id="@+id/img_chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_chevron_left_black_36dp"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_money"
                style="@style/TextViewDetail"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/img_sub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_remove_circle_outline_green_36dp"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"/>
                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_add_circle_green_36dp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_flavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorGreen"
            android:text="口味"/>
            <com.duowei.spos.view.ChildListView
                android:id="@+id/lv_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000">
            </com.duowei.spos.view.ChildListView>
</LinearLayout>
